<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_nhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập thông tin Thu/Chi"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_noidung"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="Nội dung:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_noidung"
            android:layout_width="235dp"
            android:hint="Hãy nhập nội dung"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="text"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_sotien"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Số tiền:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_sotien"
            android:layout_width="235dp"
            android:hint="Hãy nhập số tiền"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:ems="10"
            android:inputType="text"
            android:layout_marginEnd="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_hinhthuc"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Hình thức:"
            android:textSize="20sp"/>

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_gravity="center"
                android:id="@+id/radioButton_thu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Thu" />


            <RadioButton
                android:layout_gravity="center"
                android:id="@+id/radioButton_chi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btnthem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:background="#34679c"/>

        <Button
            android:id="@+id/btnnhaplai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="bottom"
            android:background="#34679c"
            />

        <Button
            android:id="@+id/btnhienthi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Hiển thị"
            android:background="#34679c"
            />

    </LinearLayout>

</LinearLayout>